<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".controllers.activities.EnterpriseDetailsActivity">
                 <com.androidnetworking.widget.ANImageView
                        android:id="@+id/imageEnterpriseImage"
                        android:layout_width="150dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/not_available"
                />

                <TextView
                        android:id="@+id/labelEnterpriseName"
                        android:text="@string/enterprise_label_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/imageEnterpriseImage"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"/>

                <TextView
                        android:id="@+id/textEnterpriseName"
                        android:text="Enterprise Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/imageEnterpriseImage"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/labelEnterpriseName"/>

                <TextView
                        android:id="@+id/labelEnterpriseDirection"
                        android:text="@string/enterprise_label_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toEndOf="@id/imageEnterpriseImage"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/textEnterpriseName"/>

                <TextView
                        android:id="@+id/textEnterpriseDirection"
                        android:text="Enterprise Direction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/labelEnterpriseDirection"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imageEnterpriseImage"/>
                <RatingBar
                        android:id="@+id/ratingBarEnterprise"
                        android:layout_width="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="38dp"
                        app:layout_constraintTop_toBottomOf="@id/imageEnterpriseImage"/>

                <TextView
                        android:id="@+id/textAverageStarsEnterprise"
                        android:text="4.0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/ratingBarEnterprise"
                        app:layout_constraintRight_toRightOf="@id/imageEnterpriseImage"
                        app:layout_constraintLeft_toLeftOf="@id/imageEnterpriseImage"/>

                <TextView
                        android:id="@+id/textStars5Enterprise"
                        android:text="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="175dp"
                        app:layout_constraintTop_toBottomOf="@id/ratingBarEnterprise"
                        app:layout_constraintStart_toStartOf="parent"/>

                <ProgressBar
                        android:id="@+id/progressBar5Stars"
                        app:layout_constraintTop_toBottomOf="@id/ratingBarEnterprise"
                        android:layout_marginTop="15dp"
                        android:progress="0"
                        android:padding="1.5dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        app:layout_constraintStart_toEndOf="@id/textStars5Enterprise"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="100dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                <TextView
                        android:id="@+id/textVStars4Enterprise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="175dp"
                        android:text="4"
                        app:layout_constraintTop_toBottomOf="@id/textStars5Enterprise"
                        app:layout_constraintStart_toStartOf="parent"/>

                <ProgressBar
                        android:id="@+id/progressBar4Stars"
                        app:layout_constraintTop_toBottomOf="@id/progressBar5Stars"
                        android:progress="0"
                        android:padding="1.5dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        app:layout_constraintStart_toEndOf="@id/textVStars4Enterprise"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="100dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                <TextView
                        android:id="@+id/textStars3Enterprise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="175dp"
                        android:text="3"
                        app:layout_constraintTop_toBottomOf="@id/textVStars4Enterprise"
                        app:layout_constraintStart_toStartOf="parent"/>

                <ProgressBar
                        android:id="@+id/progressBar3Stars"
                        app:layout_constraintTop_toBottomOf="@id/progressBar4Stars"
                        android:progress="0"
                        android:padding="1.5dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        app:layout_constraintStart_toEndOf="@id/textStars3Enterprise"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="100dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                <TextView
                        android:id="@+id/textStars2Enterprise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="175dp"
                        android:text="2"
                        app:layout_constraintTop_toBottomOf="@id/textStars3Enterprise"
                        app:layout_constraintStart_toStartOf="parent"/>

                <ProgressBar
                        android:id="@+id/progressBar2Stars"
                        app:layout_constraintTop_toBottomOf="@id/progressBar3Stars"
                        android:progress="0"
                        android:padding="1.5dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        app:layout_constraintStart_toEndOf="@id/textStars2Enterprise"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="100dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                <TextView
                        android:id="@+id/textStars1Enterprise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="175dp"
                        android:text="1"
                        app:layout_constraintTop_toBottomOf="@id/textStars2Enterprise"
                        app:layout_constraintStart_toStartOf="parent"/>

                <ProgressBar
                        android:id="@+id/progressBar1Stars"
                        app:layout_constraintTop_toBottomOf="@id/progressBar2Stars"
                        android:progress="0"
                        android:padding="1.5dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        app:layout_constraintStart_toEndOf="@id/textStars1Enterprise"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="100dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                <Button
                        android:id="@+id/commentButton"
                        android:text="Write comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="33dp"
                        app:layout_constraintTop_toBottomOf="@id/textStars1Enterprise"/>


                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/commentRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/commentButton"
                        app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>